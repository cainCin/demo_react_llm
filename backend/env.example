# LLM API Configuration
# Choose either Standard OpenAI OR Azure OpenAI (not both)

# ============================================
# Option 1: Standard OpenAI
# ============================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Option 2: Azure OpenAI (Recommended)
# ============================================
# Uncomment and fill in these values for Azure OpenAI:
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
# AZURE_EMBEDDING_MODEL=text-embedding-ada-002  # Embedding model name
# AZURE_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name  # Or use deployment name

# RAG System Configuration (optional)
RAG_ENABLED=true
EMBEDDING_MODEL=text-embedding-ada-002  # Default embedding model
EMBEDDING_DIM=1536  # Dimension for ada-002
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=3
MILVUS_LITE_PATH=./milvus_lite.db
MILVUS_COLLECTION=chatbox_vectors
MILVUS_METRIC_TYPE=L2

# PostgreSQL Configuration (for RAG full text storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatbox_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TIMEOUT=60.0  # Timeout in seconds for API calls (default: 60)

# File Upload
MAX_FILE_SIZE=10485760


